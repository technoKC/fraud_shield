# FraudShield Backend Environment Configuration

# Security Keys
SECRET_KEY=your-secret-key-here-generate-with-secrets-token-urlsafe-32

# Admin Credentials
CENTRALBANK_USERNAME=centralbank
CENTRALBANK_PASSWORD=admin123
MANIT_USERNAME=manit
MANIT_PASSWORD=bhopal123

# OAuth Configuration
OAUTH_CLIENT_ID=fraudshield-client
OAUTH_CLIENT_SECRET=fraudshield-secret

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://fraudshield.com

# TLS Configuration (for production)
ENABLE_TLS=false
TLS_CERT_FILE=certs/server.crt
TLS_KEY_FILE=certs/server.key

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
RATE_LIMIT_PER_MINUTE=60
MAX_LOGIN_ATTEMPTS=5

# AI Configuration
AI_CONFIDENCE_THRESHOLD=0.6
AI_HIGH_RISK_THRESHOLD=80
AI_MEDIUM_RISK_THRESHOLD=60

# Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/fraudshield

# Redis (for caching and rate limiting)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/fraudshield.log

# Email (for alerts)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Feature Flags
ENABLE_AI_DETECTION=true
ENABLE_NETWORK_GRAPH=true
ENABLE_MANIT_DASHBOARD=true
ENABLE_SECURITY_FEATURES=true

# File Upload
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=csv

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090